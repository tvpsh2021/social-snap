{
  "manifest_version": 3,
  "name": "Social Snap",
  "version": "2.0.0",
  "description": "Social Snap - Download all images from Threads.com, Instagram.com and Facebook.com posts with a single click",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://www.threads.com/*",
    "https://www.instagram.com/*",
    "https://www.facebook.com/*",
    "https://*.cdninstagram.com/*",
    "https://*.fbcdn.net/*",
    "https://*.instagram.com/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Social Snap - Download Images",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.threads.com/@*/post/*",
        "https://www.threads.com/t/*",
        "https://www.instagram.com/p/*",
        "https://www.instagram.com/reel/*",
        "https://www.facebook.com/photo/*",
        "https://www.facebook.com/*/photos/*"
      ],
      "js": ["src/content/content-main.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "src/background/background-main.js",
    "type": "module"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/shared/utils/*.js",
        "src/shared/constants/*.js"
      ],
      "matches": [
        "https://www.threads.com/*",
        "https://www.instagram.com/*",
        "https://www.facebook.com/*"
      ]
    }
  ]
}
